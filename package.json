{
  "name": "svelte-3-boilerplate",
  "version": "0.0.1",
  "description": "Svelte 3 Boilerplate using rollup",
  "main": "index.js",
  "repository": "git@github.com:jackyef/svelte-3-boilerplate.git",
  "author": "Deni Cho & Jacky Efendi",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "start": "sirv public",
    "dev": "run-p start:dev autobuild",
    "start:dev": "sirv public --dev",
    "dev:server": "run-p dev:build:server dev:start:server",
    "dev:build:server": "rollup -c ./server/rollup.config.js -w",
    "dev:start:server": "nodemon ./server/build/server.js",
    "autobuild": "rollup -c -w"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-svelte3": "^1.2.3",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.12.3",
    "rollup-plugin-bundle-html": "^0.2.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.0.0",
    "sirv-cli": "^0.4.2",
    "svelte": "^3.4.2"
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "koa": "^2.7.0",
    "svelte-routing": "^1.1.1"
  }
}
